
<%= nav_bar(fixed: :top, brand: "MRoster DB") do %>
  <%= menu_group do %>
    <%= menu_item "Units", units_path %>
    <%= menu_item "Equipment", equipment_index_path %>
    <%= menu_item "Skills, Magic & Injuries", skills_path %>
    <%= menu_item "Warbands", warbands_path %>
  <% end %>
  <%= menu_group(:pull => :right) do %>
    <% if session.has_key? :database_id %>
      <%= menu_item "Database: " + Database.find(session[:database_id].to_i).name, new_database_path %>
    <% else %>
      <%= menu_item "Database", new_database_path %>
  <% end %>
    <% if user_signed_in? %>
      <%= menu_item "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= menu_item "Sign up", new_user_registration_path %>
      <%= menu_item "Login", new_user_session_path  %>
    <% end %>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="jumbotron">

      <%= form_with model: @equipment do |f| %>

        <div class="form-group">
          <%= f.text_field :name, class: 'form-control large-text', placeholder: ""  %>
        </div>

        <div class="form-group">
          <%= f.label :rules %>
          <%= f.text_area :description, class: 'form-control', placeholder: ""  %>
        </div>

        <%= render 'partials/reminder', f: f %>

        <div class="form-group">
          <%= f.label :cost %>
          <%= f.text_field :cost, class: 'form-control', placeholder: ""  %>
        </div>

        <div class="form-group">
          <%= f.check_box :usable %>
          <%= :Usable %>
        </div>

        <%= render 'partials/charges', f: f %>
        <%= render 'partials/uses_per_game', f: f %>

        <%= f.submit nil, :class => "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
